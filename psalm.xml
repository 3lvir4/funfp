<?xml version="1.0"?>
<psalm
    errorLevel="2"
    resolveFromConfigFile="true"
    phpVersion="8.3"
    findUnusedPsalmSuppress="true"
    findUnusedBaselineEntry="false"
    findUnusedCode="false"
>
    <projectFiles>
        <directory name="src" />
        <ignoreFiles>
            <directory name="vendor" />
            <directory name="docs" />
        </ignoreFiles>
    </projectFiles>

    <issueHandlers>
        <UnusedPsalmSuppress errorLevel="info" />
        <InvalidTemplateParam errorLevel="suppress" />
    </issueHandlers>
</psalm>